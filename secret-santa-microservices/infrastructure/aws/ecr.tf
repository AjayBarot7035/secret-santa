# ECR Lifecycle Policy
resource "aws_ecr_lifecycle_policy" "csv_parser" {
  repository = aws_ecr_repository.csv_parser.name

  policy = jsonencode({
    rules = [
      {
        rulePriority = 1
        description  = "Keep last 5 images"
        selection = {
          tagStatus     = "any"
          countType     = "imageCountMoreThan"
          countNumber   = 5
        }
        action = {
          type = "expire"
        }
      }
    ]
  })
}

